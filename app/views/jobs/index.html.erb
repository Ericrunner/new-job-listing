<div class="col-md-12">
  <h2 class="text-center">职位列表</h2>
  <div class="pull-right">
    <%= link_to("Add a Job",new_job_path,class:"btn btn-primary")%>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>职位名称</th>
        <th>职位要求</th>
        <th>发布时间</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job|%>
        <tr>
          <td><%= link_to(job.title,job_path(job))%></td>
          <td><%= job.description%></td>
          <td><%= job.created_at%></td>
          <td>
            <%= link_to("Edit",edit_job_path(job),class:"btn btn-default")%>
            <%= link_to("Delete",job_path(job),method: :delete,class:"btn btn-default",data:{ confirm:"Are you sure?"})%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
