<div class="col-md-12">
  <h2 class="text-center">职位列表</h2>
  <div class="dropdown pull-right">
    <button type="button" data-toggle="dropdown" class="btn btn-default">排序
    <b class="caret"></b>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to("按照薪资上限排序")%></li>
      <li><%= link_to("按照薪资下限排序")%></li>
      <li><%= link_to("按照发布时间排序")%></li>
    </ul>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>职位名称</th>
        <th>职位要求</th>
        <th>薪资上限</th>
        <th>薪资下限</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job|%>
        <tr>
          <td><%= link_to(job.title,job_path(job))%></td>
          <td><%= job.description%></td>
          <td><%= job.wage_upper_bound%></td>
          <td><%= job.wage_down_bound%></td>
          <td><%= job.created_at%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
